@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models


@{
         var content = (ContentModels.CoursesStep)Model.Content;
         var CoursesStepIcon = content.Value<MediaWithCrops>("coursesStepIcon");


    
}

<div class="col-lg-4 col-md-6">
    <div class="work-process-box text-center">
        <div class="process__icon p-relative mb-35">
            <span class="process__number">@content.Value("coursesStepNo")</span>
            <img src="@CoursesStepIcon?.MediaUrl()" alt="@CoursesStepIcon?.Name">
        </div>
        <h4 class="process__title">@content.Value("coursesStepName")</h4>
        <p>
        @content.Value("coursesStepDesc")
        </p>
    </div>
</div>